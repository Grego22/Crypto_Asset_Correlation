<div class="col-sm-8-blog-main">
  <div class="col-md-7">

<h2>
  <strong>Title:</strong>
  <%= @post.title %>
</h2>


<p>
  <%= @post.body %>
</p>

    <p>
      <%=image_tag @post.avatar, width: '100%' %>
    </p>

    <!--Start of comment form-->


  <%= render 'comments/comment_form' %>

<%= link_to fa_icon('pencil-square-o'), edit_post_path(@post) %>
<%= link_to fa_icon('trash'), posts_path %>


    <!--Start of comments -->
    <div id="comments">
    <%= render @post.comments %>
    </div>

  </div>
</div>
